<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<!--LK metals-->
  <RecipeDef>
    <defName>Make_LKForerunnerMetal</defName>
    <label>make forerunner metal</label>
    <description>Make forerunner metal.</description>
    <jobString>Making forerunner metal.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>10000</workAmount>
    <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentIndustrial</li>
          </thingDefs>
        </filter>
        <count>100</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>200</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>500</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Gold</li>
          </thingDefs>
        </filter>
        <count>500</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ComponentIndustrial</li>
        <li>Steel</li>
        <li>Plasteel</li>
        <li>Gold</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <LKForerunner_Metal>100</LKForerunner_Metal>
    </products>
    <researchPrerequisite>LKUberMetals</researchPrerequisite>
    <skillRequirements>
      <Crafting>15</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <displayPriority>15</displayPriority>
  </RecipeDef>
